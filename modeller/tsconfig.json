{
  "compilerOptions": {
    "module": "es6",
    "target": "ES6",
    "declaration": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "incremental": true,
    "allowJs": true,
    "lib": ["ES2016", "DOM"],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
