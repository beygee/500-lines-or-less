{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "incremental": true,
    "allowJs": true,
    "lib": ["ES2016", "ES2017", "ES2018", "ES2019", "ESNext", "ESNext.AsyncIterable"],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
